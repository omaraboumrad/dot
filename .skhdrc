# Open Terminal
cmd - return : osascript -e 'tell application "iTerm2" to create window with default profile command ""' || open -na iTerm

# Open Browser
cmd + shift - return : open -n -a "Google Chrome"

# Movement

# focus window
cmd - h : yabai -m window --focus west
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east

# resize window
cmd + alt - l : yabai -m window --resize right:40:0
cmd + alt - h : yabai -m window --resize right:-40:0

# swap windows
ctrl + shift - h : yabai -m window --swap west
ctrl + shift - j : yabai -m window --swap south
ctrl + shift - k : yabai -m window --swap north
ctrl + shift - l : yabai -m window --swap east

# send window to space
cmd + shift - 1 : yabai -m window --space  1
cmd + shift - 2 : yabai -m window --space  2
cmd + shift - 3 : yabai -m window --space  3
cmd + shift - 4 : yabai -m window --space  4
cmd + shift - 5 : yabai -m window --space  5

# focus space
cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4
cmd - 5 : yabai -m space --focus 5

# toggle padding
cmd - o : yabai -m space --toggle padding

# screenshotting
cmd + ctrl - 4 : screencapture -c -i
